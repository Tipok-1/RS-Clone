{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/types"],
    "module": "commonjs",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
